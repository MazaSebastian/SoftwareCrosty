{
  "name": "crosty-gastronomia",
  "version": "1.0.0",
  "description": "Software de gesti贸n gastron贸mica para CROSTY",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "build:optimize": "GENERATE_SOURCEMAP=false npm run build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "performance:test": "npm run build && lighthouse http://localhost:3000 --output=html --output-path=./performance-report.html",
    "bundle:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js"
  },
  "build": {
    "appId": "com.crosty.gastronomia",
    "productName": "CROSTY Gesti贸n Gastron贸mica",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "CROSTY Software",
  "dependencies": {
    "@types/styled-components": "^5.1.34",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-scripts": "5.0.1",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
